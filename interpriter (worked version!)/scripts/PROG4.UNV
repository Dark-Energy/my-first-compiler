// C(n,2); C(n,2) = (n-1)+(n-2)+..+1;
defun int CC6(int n);
var
  int i;
begin
  if n < 2 then return 0; endif;
  i:=0; n-=1; 
  while n>0 do i+=n; n-=1;  wend;
  return i;
endfn;


