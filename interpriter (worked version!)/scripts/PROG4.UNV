//C(n, 3) = C(n-1,2)+ C(n-2, 2) + C(n-3,2) = 6+3+1; n=5;
defun int CC8(int n);
var
  int i,j,t;
begin   
  if n < 3 then return 0; endif;
  i:=0; n-=1; j:=0;
  while n > 1 do  
    n-=1; t:=n; i:=0;
    while n > 0 do i+=n--;  wend;  
    j+=i; n:=t;
  wend;
  return j;
endfn;


