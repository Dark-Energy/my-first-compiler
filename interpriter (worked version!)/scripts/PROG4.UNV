defun void prm(int n);
var
  int i,j; 
  char tmp;
begin
  if n = 0 then 
    wrap := TRUE;  return 0; endif;
  i := n-1;
  while True do 
    if i = 0 then  wrap := true;  break;   endif;
    if P[i-1] < P[i] then 
      j := n-1;
       while P[j] <= P[i-1] do  j := j-1; wend;
       tmp := P[j]; P[j] := P[i-1]; P[i-1] := tmp;
       wrap := FALSE;
       break;
     endif;
     i := i-1;
   wend;
   j := n-1;
   while i<j do 
     tmp := P[j]; P[j] := P[i]; P[i] := tmp;
     i := i+1;
     j := j-1;
   wend;
endfn;


defun void NextPerm();
