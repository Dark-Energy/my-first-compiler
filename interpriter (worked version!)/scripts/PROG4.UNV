defun int RazmKol(int n,int m);
var
  int i, result;
begin
if (m > n or m < 0 || n < 0) then 
  return 0;
else 
  if (n=0 or m=0) then return 1;
endif;

result:=n;
if m > 1 then 
  for i:= 1 to m-1 do 
    result:=result*(n-i);
  next;
endif;
return result;
endfn;

