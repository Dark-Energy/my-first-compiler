// C(n,0)+C(n,1)+...+C(n,n);
defun int CC5(int n);
var
  int i, res;
begin
  i:=0; res:=0;
  while i <= n do 
    res+= CC3(n,i); i+=1;
  wend;
  return res;
endfn;

